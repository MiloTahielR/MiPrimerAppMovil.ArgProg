<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:backgroundTint="#000000"
    android:textAlignment="center"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText2"
        android:layout_width="236dp"
        android:layout_height="63dp"
        android:layout_marginTop="48dp"
        android:background="#1160F1DB"
        android:backgroundTint="#0B2FB3"
        android:backgroundTintMode="src_in"
        android:ems="10"
        android:inputType="text"
        android:text="@string/textEdit2"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#A963FF"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText1"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="215dp"
        android:layout_height="72dp"
        android:elegantTextHeight="true"
        android:text="@string/textView2"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#77FFB9"
        android:textSize="34sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.749" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="236dp"
        android:layout_height="63dp"
        android:layout_marginTop="136dp"
        android:background="#23FFFFFF"
        android:backgroundTint="#2A177E"
        android:ems="10"
        android:inputType="text"
        android:text="@string/textEdit1"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#A55DFD"
        android:textColorHint="#3E008A"
        android:textColorLink="#4A148C"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/button"
        android:layout_width="165dp"
        android:layout_height="70dp"
        android:elegantTextHeight="true"
        android:shadowColor="#45913232"
        android:text="@string/button"
        android:textColor="#5DFB7F"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText2"
        app:rippleColor="#F57F17" />


    <TextView
        android:id="@+id/textView1"
        android:layout_width="299dp"
        android:layout_height="46dp"
        android:elegantTextHeight="true"
        android:foregroundTint="#6410DC"
        android:text="@string/textView1"
        android:textAlignment="center"
        android:textColor="#03F494"
        android:textColorHighlight="#311B92"
        android:textColorHint="#EBFFFFFF"
        android:textColorLink="#45FF9F"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:barrierMargin="3dp"
        app:layout_constraintBottom_toTopOf="@+id/editText1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.866"
        app:layout_goneMarginBaseline="2dp" />


</androidx.constraintlayout.widget.ConstraintLayout>